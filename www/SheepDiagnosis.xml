<!-- QUESTIONS -->
<question>
	<description>Is het beweidingsplan van de schapen recentelijk veranderd?</description>
	<option>
		<description>Ja, de schapen zijn van binnen naar buiten gegaan.</description>
		<then>
			<fact name="Voeding">veranderd</fact>
			<fact name="Locatie">buiten</fact>
		</then>
	</option>
	<option>
		<description>Ja, de schapen zijn van buiten naar binnen gegaan.</description>
		<then>
			<fact name="Voeding">veranderd</fact>
			<fact name="Locatie">binnen</fact>
		</then>
	</option>
	<option>
		<description>Ja, de schapen staan op een nieuw weiland.</description>
		<then>
			<fact name="Voeding">veranderd</fact>
			<fact name="Locatie">buiten</fact>
		</then>
	</option>
	<option>
		<description>Nee, de schapen staan nog steeds binnen.</description>
		<then>
			<fact name="Voeding">gelijk</fact>
			<fact name="Locatie">binnen</fact>
		</then>
	</option>
	<option>
		<description>Nee, de schapen staan nog steeds buiten.</description>
		<then>
			<fact name="Voeding">gelijk</fact>
			<fact name="Locatie">buiten</fact>
		</then>
	</option>
</question>

