<knowledge>
	<title>Sheep diagnosis</title>
	<description>This system will help you decide whether you should call a veterinarian and if not, what you can do to help your sheep. </description>

<!-- GOALS -->

	<goal name="action">
		<answer value="DierenartsUrgent">Bel zo snel mogelijk de dierenarts.</answer>
		<answer value="Dierenarts">Bel de dierenarts.</answer>
		<answer value="Aangifteplichtig">Je moet deze mogelijke ziekte melden bij autoriteiten.</answer>
		<answer value="Voedingsprobleem">De oorzaak lijkt de voeding te zijn, ...</answer>
		<answer value="Wormeninfectie">Het lijkt erop dat de schapen last hebben van wormen.</answer>

	</goal>

<!-- RULES -->

<rule>
	<description>Qualifications for Dog</description>
	<if>
		<and>
			<fact name="Hiking_person">yes</fact>
			<or>
				<fact name="play">yes</fact>
				<fact name="cuddle">yes</fact>
			</or>
		</and>
	</if>
	<then>
		<fact name="pet">Dog</fact>
	</then>
</rule>


