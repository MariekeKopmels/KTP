<!-- QUESTIONS -->
<question>
	<description>Is het beweidingsplan van de schapen recentelijk veranderd?</description>
	<option>
		<description>Ja, de schapen zijn van binnen naar buiten gegaan.</description>
		<then>
			<fact name="Voeding">veranderd</fact>
			<fact name="Locatie">buiten</fact>
		</then>
	</option>
	<option>
		<description>Ja, de schapen zijn van buiten naar binnen gegaan.</description>
		<then>
			<fact name="Voeding">veranderd</fact>
			<fact name="Locatie">binnen</fact>
		</then>
	</option>
	<option>
		<description>Ja, de schapen staan op een nieuw weiland.</description>
		<then>
			<fact name="Voeding">veranderd</fact>
			<fact name="Locatie">buiten</fact>
		</then>
	</option>
	<option>
		<description>Nee, de schapen staan nog steeds binnen.</description>
		<then>
			<fact name="Voeding">gelijk</fact>
			<fact name="Locatie">binnen</fact>
		</then>
	</option>
	<option>
		<description>Nee, de schapen staan nog steeds buiten.</description>
		<then>
			<fact name="Voeding">gelijk</fact>
			<fact name="Locatie">buiten</fact>
		</then>
	</option>
</question>

<question>
	<description>Is de voedingssoort veranderd?</description>
	<option>
		<description>Ja, de schapen krijgen bix, eerst kregen ze een andere soort bix.</description>
		<then>
			<fact name="Voedingssoort">bix</fact>
			<fact name="Voeding">gelijk</fact>
			<!--Een verschil in soort bix wordt niet als verandering in voeding gezien-->
		</then>
	</option>
	<option>
		<description>Ja, de schapen krijgen hooi, eerst kregen ze bix.</description>
		<then>
			<fact name="Voedingssoort">hooi</fact>
			<fact name="Voeding">veranderd</fact>
		</then>
	</option>
	<option>
		<description>Ja, de schapen krijgen bix, eerst kregen ze hooi.</description>
		<then>
			<fact name="Voedingssoort">bix</fact>
			<fact name="Voeding">veranderd</fact>
		</then>
	</option>
	<option>
		<description>Nee, ze krijgen nog steeds bix.</description>
		<then>
			<fact name="Voedingssoort">bix</fact>
			<fact name="Voeding">gelijk</fact>
		</then>
	</option>
	<option>
		<description>Nee, ze krijgen nog steeds hooi.</description>
		<then>
			<fact name="Voedingssoort">hooi</fact>
			<fact name="Voeding">gelijk</fact>
		</then>
	</option>
</question>



